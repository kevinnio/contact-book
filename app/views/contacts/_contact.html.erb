<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-96x96">
        <%= image_tag contact.picture %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p><strong><%= contact.fullname %></strong></p>
        <div>
          <span class="icon"><i class="fa fa-phone"></i></span>
          <span><%= contact.telephone %></span>
        </div>
        <% if contact.address.present? %>
          <div>
            <span class="icon"><i class="fa fa-home"></i></span>
            <span><%= contact.address %></span>
          </div>
        <% end %>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item">
            <a href="<%= edit_contact_path(contact) %>" class="icon is-small" title="Edit">
              <i class="fas fa-edit"></i>
            </a>
          </a>
          <a class="level-item">
            <%= link_to contact_path(contact), method: :delete, data: { confirm: 'You sure you want to delete this contact?' }, class: 'icon is-small' do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </a>
        </div>
      </nav>
    </div>
  </article>
</div>
